# Medical AI Platform - Environment Variables
# Copy this file to .env and fill in your API keys
# NEVER commit .env to git!

# ============================================================
# AI API Keys (REQUIRED)
# ============================================================

# OpenAI API (for GPT-4o, O1, O3)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_key_here

# Google Gemini API (for Gemini 2.0 Flash, 2.5 Pro)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_key_here

# Perplexity API (for literature search)
# Get from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-your_perplexity_key_here

# ============================================================
# Supabase (REQUIRED for full functionality)
# ============================================================

# Get from: https://supabase.com → Project Settings → API
SUPABASE_URL=https://your_project_id.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================================
# Google Cloud Platform (for deployment)
# ============================================================

PROJECT_ID=your_gcp_project_id
REGION=us-central1
SERVICE_URL=https://your_cloudrun_url_here

# GCS Bucket for file storage
GCS_BUCKET_NAME=your_bucket_name

# Service account key (path to JSON file)
SERVICE_ACCOUNT_KEY_PATH=service-account-key.json

# ============================================================
# AWS (OPTIONAL - for Textract fallback)
# ============================================================

AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# ============================================================
# Application Settings
# ============================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Max concurrent jobs
MAX_CONCURRENCY=8

# ============================================================
# Optional: Monitoring & Analytics
# ============================================================

# Sentry (error tracking)
# SENTRY_DSN=https://your_sentry_dsn

# Datadog (APM)
# DD_API_KEY=your_datadog_api_key
# DD_APP_KEY=your_datadog_app_key

# ============================================================
# Security
# ============================================================

# Secret key for JWT (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
